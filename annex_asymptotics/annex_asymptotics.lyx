\begin_inset Formula $\boldsymbol{\nabla}\cdot\boldsymbol{J}_{at}$
\end_inset

 où 
\begin_inset Formula $\boldsymbol{J}_{at}$
\end_inset

 est défini par l'équation 
\begin_inset CommandInset ref
LatexCommand eqref
reference "eq:model_antitrap"
plural "false"
caps "false"
noprefix "false"

\end_inset

.
 
\end_layout

\begin_layout Standard
On commence par insérer les développements de 
\begin_inset Formula $\partial\phi/\partial t$
\end_inset

 et du vecteur normal pour obtenir
\begin_inset Formula 
\begin{align*}
\boldsymbol{J}_{at} & =-U\left(\phi,\mu\right)W\left\{ \frac{D_{l}}{W^{2}}\left[\varepsilon^{2}\frac{\partial\phi}{\partial\bar{t}}-\varepsilon\bar{v}_{n}\frac{\partial\phi}{\partial\xi}-\bar{v}_{\tau}\varepsilon^{2}\frac{\partial\phi}{\partial\bar{s}}\right]+O\left(\varepsilon^{3}\right)\right\} \\
 & \quad\quad\quad\times\left\{ \boldsymbol{n}\left\{ 1+\frac{1}{2}\varepsilon^{2}\left(\frac{\partial_{\bar{s}}\phi}{\partial_{\xi}\phi}\right)^{2}\right\} +\boldsymbol{\tau}\varepsilon\left(1-\varepsilon\xi\bar{\kappa}\right)\frac{\partial_{\bar{s}}\phi}{\left|\partial_{\xi}\phi\right|}+O\left(\varepsilon^{3}\right)\right\} \\
 & =-\frac{D_{l}}{W}U\left(\phi,\mu\right)\left\{ -\varepsilon\bar{v}_{n}\frac{\partial\phi}{\partial\xi}\boldsymbol{n}+\varepsilon^{2}\left[\frac{\partial\phi}{\partial\bar{t}}-\bar{v}_{\tau}\frac{\partial\phi}{\partial\bar{s}}\right]\boldsymbol{n}-\varepsilon^{2}\bar{v}_{n}\frac{\partial\phi}{\partial\xi}\frac{\partial_{\bar{s}}\phi}{\left|\partial_{\xi}\phi\right|}\boldsymbol{\tau}\right\} +O\left(\varepsilon^{3}\right)
\end{align*}

\end_inset

On applique ensuite l'opérateur de divergence du Tableau 
\begin_inset CommandInset ref
LatexCommand ref
reference "tab:curvilinear_diff_operators_inner_expanded"

\end_inset

 pour obtenir
\begin_inset Formula 
\begin{align*}
\boldsymbol{\nabla}\cdot\boldsymbol{J}_{at} & =-\frac{1}{W}\left[\frac{\partial}{\partial\xi}\left(\boldsymbol{n}\cdot\boldsymbol{J}_{at}\right)+\varepsilon\left\{ \frac{\partial}{\partial\bar{s}}\left(\boldsymbol{\tau}\cdot\boldsymbol{J}_{at}\right)+\bar{\kappa}\boldsymbol{n}\cdot\boldsymbol{J}_{at}\right\} \right]+O\left(\varepsilon^{3}\right)\\
 & =-\frac{D_{l}}{W^{2}}\left[\frac{\partial}{\partial\xi}\left\{ U\left(\phi,\mu\right)\left(-\varepsilon\bar{v}_{n}\frac{\partial\phi}{\partial\xi}+\varepsilon^{2}\left[\frac{\partial\phi}{\partial\bar{t}}-\bar{v}_{\tau}\frac{\partial\phi}{\partial\bar{s}}\right]\right)\right\} -\varepsilon^{2}\bar{\kappa}\bar{v}_{n}U\left(\phi,\mu\right)\frac{\partial\phi}{\partial\xi}\right]+O\left(\varepsilon^{3}\right)\\
 & =-\frac{D_{l}}{W^{2}}\left[-\varepsilon\bar{v}_{n}\frac{\partial}{\partial\xi}\left(U\left(\phi,\mu\right)\frac{\partial\phi}{\partial\xi}\right)+\varepsilon^{2}\left\{ \frac{\partial}{\partial\xi}\left[U\left(\phi,\mu\right)\left(\frac{\partial\phi}{\partial\bar{t}}-\bar{v}_{\tau}\frac{\partial\phi}{\partial\bar{s}}\right)\right]-\bar{\kappa}\bar{v}_{n}U\left(\phi,\mu\right)\frac{\partial\phi}{\partial\xi}\right\} \right]+O\left(\varepsilon^{3}\right)
\end{align*}

\end_inset

On remplace finalement 
\begin_inset Formula $\phi$
\end_inset

 et 
\begin_inset Formula $\mu$
\end_inset

